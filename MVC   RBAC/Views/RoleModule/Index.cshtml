@model IEnumerable<MVC___RBAC.Models.Role>
@{
    ViewBag.Title = "角色模块管理";
}
<a id="cla" href="#">新增</a>
<table>
    <tr>
        <th>角色名称</th>
        <th>模块名称</th>
        <th>控制器名称</th>
        <th>操作</th>
    </tr>
    @*第一次循环遍历所有角色*@
    @foreach (var role in Model)
    {
        @*第二次循环遍历每一个角色的模块*@
        foreach (var modele in role.Modules)
        {
            <tr>
                <td>@role.Name</td>
                <td>@modele.Name</td>
                <td>@modele.Controller</td>
                <td style="width: 100px;">
                    <a class="edit" href="@Url.Action("Edit", new { roleid = role.Id, moduleid = modele.Id  })">编辑</a>
                    @Html.ActionLink("删除", "Delete", new {roleid = role.Id, moduleid = modele.Id }, new { @class="delete" })

                </td>
            </tr>
        }
    }
</table>
<script src="~/Scripts/jquery-3.2.1.min.js"></script>
@section Script
{
    <script>
     $("#cla").click(function () {
         layer.open({
             type: 2,
             title: '模块管理新增',
             shadeClose: true,
             shade: false,
             area:['500px','600px'],
             content: '@Url.Action("Creadte")'
         });
     })

    $(".edit").click(function (event) {
        $that = $(this);
        var $this = $(this);
        layer.open({
            type: 2,
            title: '模块管理编辑',
            shadeClose: true,
            shade: false,
            area: ['500px', '600px'],
            content: $that.attr("href")
        });
        //阻止页面跳转
        event.preventDefault();
    })
//删除
    $(".delete").click(function (event) {
        //阻止页面跳转
        event.preventDefault();
        var href = $(this).attr("href");
        $.ajax({
            url: href,
            type: "post",
            success: function (res) {
                if (res.code == 200) {
                    //刷新页面
                    window.location.reload();
                }
                else {
                    alert("删除失败")
                }
            }
        })
    })
    </script>	
    }