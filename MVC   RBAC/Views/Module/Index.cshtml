@model IEnumerable<MVC___RBAC.Models.Module>
@{
    ViewBag.Title = "模块管理";
}

<form id="search">
    <input type="text" placeholder="名称" />
    <input type="text" placeholder="控制器" />
    <input type="button" value="查询" />
</form>
<a id="cla" href="#">新增</a>
<table>
    <tr>
        <th>ID</th>
        <th>名称</th>
        <th>控制器</th>
        <th>操作</th>
    </tr>
    @*<tr>*@
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td>@item.Controller</td>
        <td style="width: 100px;">
            <a class  ="edit" href="@Url.Action("Edit",new {id=item.Id})">编辑</a>
            @*<a href="#">编辑</a>*@
            @Html.ActionLink("删除", "Delete", new { id = item.Id })
            @*<a href="#">删除</a>*@
        </td>
    </tr>
    }
        @*<td>1</td>
        <td>模块管理</td>
        <td>Module</td>
        <td style="width: 100px;">
            <a href="#">编辑</a>
            <a href="#">删除</a>
        </td>*@
    @*</tr>*@
</table>
<script src="~/Scripts/jquery-3.2.1.min.js"></script>
@section Script
{
<script>
     $("#cla").click(function () {
         layer.open({
             type: 2,
             title: '模块管理新增',
             shadeClose: true,
             shade: false,
             area:['500px','600px'],
             content: '@Url.Action("Creadte")'
         });
     })

    $(".edit").click(function (event) {
        $that = $(this);
        var $this = $(this);
        layer.open({
            type: 2,
            title: '模块管理编辑',
            shadeClose: true,
            shade: false,
            area: ['500px', '600px'],
            content: $that.attr("href")
        });
        event.preventDefault();
    })
</script>	
    
    }

   
    
   	

