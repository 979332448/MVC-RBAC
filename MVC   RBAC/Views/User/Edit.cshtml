@model MVC___RBAC.Models.User
@{
    Layout = "~/Views/_LayFormPage1.cshtml";
}

<form class="bootstrap-frm">
    <h1>用户管理 - 编辑</h1>
    <label>
        <span>ID</span>
        <input type="text" readonly="" value="@Model.Id" name="Id" />
    </label>
    <label>
        <span>用户名称</span>
        <input type="text" placeholder="请输入用户名称" value="@Model.Username" name="Username" />
    </label>
    <label>
        <span>密码</span>
        <input type="text" placeholder="请输入密码" value="@Model.Password" name="Password" />
    </label>
    <label>
        <span>&nbsp;</span>
        <input type="button" class="button" value="提交" />
    </label>
</form>
<script src="~/Scripts/jquery-3.2.1.min.js"></script>
@section Script
{
    <script>
        $(".button").click(function () {
            $.ajax({
                url: '@Url.Action("Add", "User")',
                type: "post",
                data: $("form").serialize(),
                success: function (data) {
                    if (data.code === 200) {
                        var index = parent.layer.getFrameIndex(window.name);
                        parent.layer.close(index);
                        parent.location.reload();
                    }
                    else {
                        alert("提交失败")
                    }
                }

            })
        })
</script>
</script>
}

