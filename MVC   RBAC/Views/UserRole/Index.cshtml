@model IEnumerable<MVC___RBAC.Models.User>
@{
    ViewBag.Title = "用户角色管理";
}
<a id="cla" href="#">新增</a>
<table>
    <tr>
        <th>用户名称</th>
        <th>用户密码</th>
        <th>用户角色</th>
        <th>操作</th>
    </tr>
    @*第一次循环遍历所有用户*@
    @foreach (var user in Model)
    {
        @*第二次循环遍历每一个用户的角色*@
    foreach (var role in user.Roles)
    {
        <tr>
            <td>@user.Username</td>
            <td>@user.Password</td>
            <td>@role.Name</td>
            <td style="width: 100px;">
                <a class="edit" href="@Url.Action("Edit", new { userid = user.Id, roleid = role.Id  })">编辑</a>
                @Html.ActionLink("删除", "Delete", new { userid = user.Id, roleid = role.Id }, new { @class = "delete" })

            </td>
        </tr>
        }
    }
</table>
<script src="~/Scripts/jquery-3.2.1.min.js"></script>
@section Script
{
    <script>
     $("#cla").click(function () {
         layer.open({
             type: 2,
             title: '模块管理新增',
             shadeClose: true,
             shade: false,
             area:['500px','600px'],
             content: '@Url.Action("Creadte")'
         });
     })

    $(".edit").click(function (event) {
        $that = $(this);
        var $this = $(this);
        layer.open({
            type: 2,
            title: '模块管理编辑',
            shadeClose: true,
            shade: false,
            area: ['500px', '600px'],
            content: $that.attr("href")
        });
        //阻止页面跳转
        event.preventDefault();
    })
//删除
    $(".delete").click(function (event) {
        //阻止页面跳转
        event.preventDefault();
        var href = $(this).attr("href");
        $.ajax({
            url: href,
            type: "post",
            success: function (res) {
                if (res.code == 200) {
                    //刷新页面
                    window.location.reload();
                }
                else {
                    alert("删除失败")
                }
            }
        })
    })
    </script>
}

